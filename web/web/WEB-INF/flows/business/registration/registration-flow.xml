<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/webflow
       http://www.springframework.org/schema/webflow/spring-webflow-2.4.xsd">

    <secured attributes="ROLE_BUSINESS" />

    <on-start>
        <evaluate expression="businessRegistrationFlowActions.createBusinessRegistration()"
                  result="flowScope.businessRegistration" />
    </on-start>

    <decision-state id="profileComplete">
        <if test="businessRegistrationFlowActions.isRegistrationComplete(flowScope.businessRegistration.rid, flowScope.businessRegistration.businessUser)"
            then="registrationComplete"
            else="profileCompletion" />
    </decision-state>

    <view-state id="profileCompletion" model="businessRegistration">
        <on-entry>
            <!-- Populates all available business types -->
            <evaluate result="businessRegistration.availableBusinessTypes"
                      expression="T(com.receiptofi.domain.types.BusinessTypeEnum).asList()" />
        </on-entry>
        <transition on="submit" to="validateUserProfile" />
        <transition on="cancel" to="logout" />
    </view-state>

    <action-state id="validateUserProfile">
        <evaluate expression="businessRegistrationFlowActions.validateUserProfileDetails(businessRegistration, messageContext)" />
        <transition on="success" to="registrationStart">
            <evaluate expression="businessRegistrationFlowActions.updateProfile(flowScope.businessRegistration)" />
        </transition>
        <transition on="failure" to="profileCompletion" />
    </action-state>

    <view-state id="registrationStart" model="businessRegistration">
        <transition on="submit" to="validateBusinessProfile" />
        <transition on="cancel" to="logout" />
    </view-state>

    <action-state id="validateBusinessProfile">
        <evaluate expression="businessRegistrationFlowActions.validateBusinessDetails(businessRegistration, messageContext)" />
        <transition on="success" to="registrationReview">
            <evaluate expression="businessRegistrationFlowActions.updateBusiness(businessRegistration)" />
        </transition>
        <transition on="failure" to="registrationStart" />
    </action-state>

    <view-state id="registrationReview">
        <transition on="confirm" to="completeRegistrationInformation" />
        <transition on="revise" to="profileCompletion" />
        <transition on="cancel" to="logout" />
    </view-state>

    <action-state id="completeRegistrationInformation">
        <evaluate result="businessRegistration"
                  expression="businessRegistrationFlowActions.completeRegistrationInformation(businessRegistration)"/>

        <transition to="profileCompletion"
                    on-exception="com.receiptofi.web.flow.BusinessRegistrationException"/>

        <transition to="registrationComplete"/>
    </action-state>
    
    <view-state id="registrationComplete">
        <transition to="logout" />
    </view-state>
    
    <end-state id="logout" />

    <global-transitions>
        <transition on="cancel" to="logout" />
    </global-transitions>
</flow>