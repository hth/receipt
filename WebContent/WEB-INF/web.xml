<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
	<display-name>receipt</display-name>

    <!-- Java Melody Start -->
    <filter>
        <filter-name>monitoring</filter-name>
        <filter-class>net.bull.javamelody.MonitoringFilter</filter-class>
        <async-supported>true</async-supported>
        <!--<init-param>-->
            <!-- removed for because of spring security; only requires in one place -->
            <!--<param-name>allowed-addr-pattern</param-name>-->
            <!--&lt;!&ndash; Allows 192.168.1.* with mask 255.255.255.255, other wise add |123\.123\.123\.123 &ndash;&gt;-->
            <!--<param-value>192\.168\.1\..*</param-value>-->
        <!--</init-param>-->
    </filter>
    <filter-mapping>
        <filter-name>monitoring</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>net.bull.javamelody.SessionListener</listener-class>
    </listener>
    <!-- Java Melody Ends -->

    <!-- load other configs -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/security/secure.xml</param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <!-- load other configs ends -->

	<servlet>
		<servlet-name>receipt</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>receipt</servlet-name>
		<url-pattern>*.htm</url-pattern>
	</servlet-mapping>

    <servlet-mapping>
        <servlet-name>receipt</servlet-name>
        <url-pattern>*.xml</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>receipt</servlet-name>
        <url-pattern>*.json</url-pattern>
    </servlet-mapping>
    <!--Do no include html servlet mapping here as this would result in not throwing the right error codes listed below -->

    <!--http://static.springsource.org/spring/docs/3.1.x/spring-framework-reference/html/mvc.html-->
    <!--16.3.3.11 Working with "application/x-www-form-urlencoded" data-->
    <filter>
        <filter-name>httpPutFormFilter</filter-name>
        <filter-class>org.springframework.web.filter.HttpPutFormContentFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>httpPutFormFilter</filter-name>
        <servlet-name>receipt</servlet-name>
    </filter-mapping>

    <error-page>
        <error-code>400</error-code>
        <location>/400.html</location>
    </error-page>

    <error-page>
        <error-code>403</error-code>
        <location>/403.html</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/404.html</location>
    </error-page>

    <error-page>
        <error-code>405</error-code>
        <location>/405.html</location>
    </error-page>

    <error-page>
        <error-code>414</error-code>
        <location>/414.html</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/500.html</location>
    </error-page>

    <!--<error-page>-->
        <!--<location>/forglobalerror</location>-->
    <!--</error-page>-->

    <!--<filter>-->
        <!--<filter-name>session</filter-name>-->
        <!--<filter-class>org.eclipse.jetty.continuation.ContinuationFilter</filter-class>-->
    <!--</filter>-->

    <!--<filter-mapping>-->
        <!--<filter-name>session</filter-name>-->
        <!--<url-pattern>/*</url-pattern>-->
    <!--</filter-mapping>-->

    <!--<servlet>-->
        <!--<servlet-name>amq</servlet-name>-->
        <!--<servlet-class>org.apache.activemq.web.AjaxServlet</servlet-class>-->
        <!--<load-on-startup>1</load-on-startup>-->
    <!--</servlet>-->

    <!--<servlet-mapping>-->
        <!--<servlet-name>amq</servlet-name>-->
        <!--<url-pattern>/amq/*</url-pattern>-->
    <!--</servlet-mapping>-->

    <!-- security configuration for spring starts -->
    <filter>
        <filter-name>springSecurityFilterChain</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>springSecurityFilterChain</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- security configuration for spring ends -->

	<context-param>
	    <param-name>log4jConfigLocation</param-name>
	    <param-value>/WEB-INF/classes/log4j.web.properties</param-value>
	</context-param>

    <!-- For logging log4j -->
    <listener>
        <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.receiptofi.web.listener.ReceiptofiServletContextListener</listener-class>
    </listener>
</web-app>